{
	"info": {
		"_postman_id": "fe797caa-55d6-4f2c-a5b3-59dbd637180b",
		"name": "Test Pet Info",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Test Pet Info",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"const schema = {\r",
							"    \"type\": \"object\",\r",
							"    \"properties\": {\r",
							"        \"age\": { \"type\": \"integer\"},\r",
							"        \"name\": { \"type\": \"string\"},\r",
							"         \"daily_sleep\": { \"type\": \"integer\"},\r",
							"         \"daily_food\": { \"type\": \"number\"}\r",
							"                }\r",
							"     };\r",
							"\r",
							"pm.test(\"Validate schema\", () => {\r",
							"    pm.response.to.have.jsonSchema(schema);\r",
							"});\r",
							"pm.test(\"Check Sleep\", function() {\r",
							"pm.expect(pm.response.json().daily_sleep).to.eql(request.data.weight*2.5);\r",
							"});\r",
							"pm.test(\"Check Weight\", function() {\r",
							"pm.expect(pm.response.json().daily_food).to.eql(request.data.weight*0.012);\r",
							"});\r",
							"\r",
							""
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "formdata",
					"formdata": [
						{
